<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.projekakhir.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.projekakhir.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_menuFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_menuFragment_to_persyaratanFragment"
            app:destination="@id/persyaratanFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.projekakhir.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/persyaratanFragment"
        android:name="com.example.projekakhir.PersyaratanFragment"
        android:label="fragment_persyaratan"
        tools:layout="@layout/fragment_persyaratan" >
        <action
            android:id="@+id/action_persyaratanFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.projekakhir.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_menuDashboardFragment"
            app:destination="@id/menuDashboardFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuDashboardFragment"
        android:name="com.example.projekakhir.MenuDashboardFragment"
        android:label="fragment_menu_dashboard"
        tools:layout="@layout/fragment_menu_dashboard" >
        <action
            android:id="@+id/action_menuDashboardFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
        <action
            android:id="@+id/action_menuDashboardFragment_to_sklFragment"
            app:destination="@id/sklFragment" />
        <action
            android:id="@+id/action_menuDashboardFragment_to_pengambilanIjazahFragment"
            app:destination="@id/pengambilanIjazahFragment" />
    </fragment>
    <fragment
        android:id="@+id/sklFragment"
        android:name="com.example.projekakhir.SklFragment"
        android:label="fragment_skl"
        tools:layout="@layout/fragment_skl" >
        <action
            android:id="@+id/action_sklFragment_to_menuDashboardFragment2"
            app:destination="@id/menuDashboardFragment" />
        <action
            android:id="@+id/action_sklFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/pengambilanIjazahFragment"
        android:name="com.example.projekakhir.PengambilanIjazahFragment"
        android:label="fragment_pengambilan_ijazah"
        tools:layout="@layout/fragment_pengambilan_ijazah" >
        <action
            android:id="@+id/action_pengambilanIjazahFragment_to_menuDashboardFragment"
            app:destination="@id/menuDashboardFragment" />
        <action
            android:id="@+id/action_pengambilanIjazahFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>