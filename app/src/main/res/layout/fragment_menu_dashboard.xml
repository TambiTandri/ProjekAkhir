<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuDashboardFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivGraduate"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTheGraduate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivGraduate"
        app:layout_constraintStart_toEndOf="@id/ivGraduate"
        android:text="The Graduate"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        android:textStyle="normal"/>

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTheGraduate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icDashboard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_dashboard"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/horizontalLine"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/horizontalLine"
        app:layout_constraintStart_toEndOf="@id/icDashboard"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icPendaftaran"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_pendaftaran"
        app:layout_constraintTop_toBottomOf="@id/icDashboard"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvPendaftaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pendaftaran"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvDashboard"
        app:layout_constraintStart_toEndOf="@id/icPendaftaran"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icSkl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_skl"
        app:layout_constraintTop_toBottomOf="@id/icPendaftaran"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSkl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKL"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvPendaftaran"
        app:layout_constraintStart_toEndOf="@id/icSkl"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icPengambilanIjasah"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_pengambilan_ijasah"
        app:layout_constraintTop_toBottomOf="@id/icSkl"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvPengambilanIjasah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengambilan Ijasah"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSkl"
        app:layout_constraintStart_toEndOf="@id/icPengambilanIjasah"/>

</androidx.constraintlayout.widget.ConstraintLayout>